{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Parameters": {
    "Token": {
      "Type": "String"
    },
    "Host": {
      "Type": "String",
      "Default": "listener.logz.io"
    },
    "Compress": {
      "Type": "String",
      "Default": "false"
    },
    "ExportName": {
      "Type": "String",
      "Default": "Function::CloudWatch-Logs-Shipper::Arn"
    },
    "OmitStartAndEnd": {
      "Type": "String",
      "Default": "false"
    }
  },
  "Resources": {
    "CloudWatchFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "FunctionName": {
          "Ref": "AWS::StackName"
        },
        "Runtime": "nodejs14.x",
        "Handler": "lambda.handler",
        "Timeout": 120,
        "MemorySize": 256,
        "CodeUri": "build",
        "Environment": {
          "Variables": {
            "TOKEN": {
              "Fn::Sub": "${Token}"
            },
            "HOST": {
              "Fn::Sub": "${Host}"
            },
            "COMPRESS": {
              "Fn::Sub": "${Compress}"
            },
            "OMIT_START_AND_END": {
              "Fn::Sub": "${OmitStartAndEnd}"
            }
          }
        },
        "Events": {}
      }
    }
  },
  "Outputs": {
    "FunctionArn": {
      "Value": {
        "Fn::GetAtt": [
          "CloudWatchFunction",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${ExportName}"
        }
      }
    }
  }
}
